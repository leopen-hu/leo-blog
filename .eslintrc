{
    "env": {
      "browser": true,
      "node": true,
      "jest/globals": true
    },
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "react",
      "react-hooks",
      "jest"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module",
      "ecmaVersion": 7
    },
    "globals": {
      "$": true,
      "process": true,
      "__dirname": true
    },
    "rules": {
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-filename-extension": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  }